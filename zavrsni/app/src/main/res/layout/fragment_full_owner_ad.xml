<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="ad"
            type="com.example.pazitelj.models.Ad" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.ad.ownerAd.FullOwnerAdFragment">

        <ImageView
            android:id="@+id/top_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/petback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            imageUrl="@{ad.pictureURL}"

            />
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/top_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            tools:text="IME"
            android:text="@{ad.userName}"
            />
        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:isIndicator="true"
            android:rating="@{ad.userRating}"
            app:layout_constraintTop_toBottomOf="@id/username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/RatingBar"
            />

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/ratingBar"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/ad_owner_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@{ad.UserPhone}"
                />

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_phone"
                />

            <TextView
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:text=":"
                />
            <TextView
                android:id="@+id/ad_owner_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="@{ad.UserEmail}"
                />
            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_email"
                />

        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/contact"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="10dp"
            />
        <ImageView
            android:id="@+id/pet_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact"
            android:layout_marginTop="10dp"
            tools:src="@drawable/cat"
            petImage="@{ad.petType}"
            />
        <TextView
            android:id="@+id/pet_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pet_icon"
            app:layout_constraintTop_toBottomOf="@id/contact"
            tools:text="Marko"
            android:text="@{ad.petName}"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/pet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pet_icon"
            app:layout_constraintTop_toBottomOf="@id/contact"
            tools:text="Cat"
            android:text="@{ad.petType}"
            android:textSize="18dp"
            android:layout_marginTop="38dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/pet_type"
            app:layout_constraintTop_toBottomOf="@id/contact"
            tools:text="|"
            android:textSize="18dp"
            android:layout_marginTop="38dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/pet_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/divide"
            app:layout_constraintTop_toBottomOf="@id/contact"
            tools:text="Bengal"
            android:textSize="18dp"
            android:layout_marginTop="38dp"
            android:layout_marginStart="20dp"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pet_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            />
        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pet_icon"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Dog Walking"
            android:text="@{ad.job}"
            android:textSize="23dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/job"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="5dp"
            android:textSize="15dp"
            tools:text="TraÅ¾im nekog da cuva psa 3.5"
            android:text="@{ad.description}"
            />
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text = "@string/applied"
            app:layout_constraintBottom_toTopOf="@id/apply_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/dark_green"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/apply_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/unapply_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            android:text="Prijava"
            android:textSize="18dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/unapply_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="60dp"
            android:text="Odjavi"
            app:backgroundTint="@color/red"
            android:textSize="18dp"
            android:visibility="gone"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_ad_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="80dp"
            android:text="Uredi"
            android:textSize="18dp"
            android:visibility="gone"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/remove_ad_btn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="140dp"
            android:text="Ukloni"
            app:backgroundTint="@color/red"
            android:textSize="18dp"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
