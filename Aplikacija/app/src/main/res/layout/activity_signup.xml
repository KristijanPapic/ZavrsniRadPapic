<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15b930"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/loginback" />

    <TextView
        android:id="@+id/google_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIJAVA SA GOOGLE"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="240dp"
        android:textColor="@color/white"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/google_btn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/google_logo_png_webinar_optimizing_for_success_google_business_webinar_13"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/spinner"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:progressTint="#29DAD4" />


</FrameLayout>