<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#A932DA40">

        <ImageView
            android:id="@+id/pet_icon"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/dog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pet_item_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="179dp"
            android:text="Ime :"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/pet_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pet_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:text="Name"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/pet_item_name_label"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pet_item_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="15dp"
            android:text="vrsta :"
            app:layout_constraintStart_toEndOf="@id/pet_icon"
            app:layout_constraintTop_toBottomOf="@id/pet_item_name" />

        <TextView
            android:id="@+id/pet_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:text="vrsta "
            app:layout_constraintStart_toEndOf="@id/pet_item_type_label"
            app:layout_constraintTop_toBottomOf="@id/pet_item_name" />


        <TextView
            android:id="@+id/pet_item_breed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="15dp"
            android:text="dodatno :"
            app:layout_constraintStart_toEndOf="@id/pet_item_type"
            app:layout_constraintTop_toBottomOf="@id/pet_item_name" />

        <TextView
            android:id="@+id/pet_item_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/pet_item_breed_label"
            app:layout_constraintTop_toBottomOf="@id/pet_item_name"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pet_item_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            app:icon="@drawable/ic_delete"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            app:iconTint="@color/red"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>